<div class="searchform">
  <h4>This site is a database of photographs, yearbooks, oral histories, manuscripts, streaming video, and more.</h4>
  <form id="home-search" class="form-inline" method="get" action="<%= root_url %>/search">
    <div id="search-options" class="form-group">
      <button type="button" tabindex="-1">
        <div>All</div>
        <i class="fa fa-caret-down" aria-hidden="true"></i>
      </button>
      <select name="field[]" class="search-element" title="Select field to search">
        <option value="All">All</option>
        <optgroup label="Specific Fields">
          <% for (var i = 0; i < searchFields.length; i++) { %>
            <% for (var key in searchFields[i]) { %>
              <option value='<%- key %>'><%- key %></option>
            <% } %>
          <% } %>
        </optgroup>
      </select>
    </div>
    <div class="form-group search-box">
      <input id="searchbox" class="search-element" type="text" name="q[]" placeholder="Search Keyword" title="Search Keywords" />
    </div>
    <div class="form-group">
      <button class="search-element" alt="Search"><i class="fas fa-search"></i> Search</button>
    </div>
    <input type="hidden" name="type[]" value="contains">
    <input type="hidden" name="bool[]" value="or">
  </form>
  <span><a href="<%= root_url %>/advanced-search">Advanced Search</a></span>
</div>

<script src="<%- root_url %>/views/search.events.js" type="module"></script>