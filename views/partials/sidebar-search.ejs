<div class="sidebar-search">
  <form class="form-inline" method="get" action="<%= root_url %>/search">
    <div id="search-options" class="form-group">
      <select name="field[]" class="search-element form-control" title="Search fields">
        <option value="all">All</option>
        <% for (var i = 0; i < searchFields.length; i++) { %>
          <% for (var key in searchFields[i]) { %>
            <option value='<%- key %>'><%- key %></option>
          <% } %>
        <% } %>
      </select>
    </div>
    <div class="form-group search-box">
      <input class="search-element" type="text" name="q[]" placeholder="Search Keywords" title="Search Keywords" />
    </div>
    <div class="form-group search-submit">
      <button class="search-element" alt="Search" title="Submit"><i class="fas fa-search"></i></button>
    </div>
    <input type="hidden" name="f[Collection][]" value="<%= collectionID %>" />
    <input type="hidden" name="type[]" value="contains">
    <input type="hidden" name="bool[]" value="or">
  </form>
</div>

<script src="<%- root_url %>/views/search.events.js" type="module"></script>